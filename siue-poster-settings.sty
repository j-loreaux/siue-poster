%%% Redefine maketitle
\renewcommand*{\maketitle}{
  \begin{staticcontents*}{title}
    \begin{titlepage}
      {\Huge\bfseries\addfontfeatures{Color=\titlecolor}\@title}\par
      \vfill
      {\Huge\addfontfeatures{Color=\authorcolor}\@author\par}
      \vfill
    \end{titlepage}
  \end{staticcontents*}
}

