\newcommand{\thmstylebox}[2]{
  \newtcolorbox[auto counter]{#1}[1][]{%
    before skip=1em,
    after skip=1em,
    colback = \thmbackcolor,
    colbacktitle = \thmtitlebackcolor,
    fontupper = \addfontfeatures{Color=\thmfontcolor}\everymath{\color{\thmfontcolor}}\everydisplay{\color{\thmfontcolor}}\renewcommand{\strongcolor}{\thmstrongcolor},
    center title,
    fonttitle = \addfontfeatures{Color=\thmtitlecolor}\bfseries,
    toptitle = 0.3em,
    bottomtitle = 0.3em,
    top = 0.4em,
    bottom = 0.4em,
    arc=1em,
    boxrule = 0.25em,
    colframe = \thmtitlebackcolor,
    titlerule = 0pt,
    width = \linewidth,
    title={#2},
    ##1
  }
}

